{
  "name": "server-template",
  "version": "1.0.0",
  "description": "this is starter template for node-express server",
  "main": "server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
    "start": "cross-env NODE_ENV=prod ts-node src/server.ts",
    "build": "tsc",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "migrate:dev": "cross-env MIGRATE_MODE=dev nodemon scripts/migration.js",
    "migrate:prod": "cross-env MIGRATE_MODE=prod nodemon scripts/migration.js"
  },
  "author": "Faisal Khan <faisal.mernstack@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.11",
    "@types/source-map-support": "^0.5.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "mock-jwks": "^1.0.10",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run formet:fix"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.1",
    "express-jwt": "^8.4.1",
    "express-validator": "^7.1.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mongoose": "^8.5.1",
    "rsa-pem-to-jwk": "^1.1.3",
    "source-map-support": "^0.5.21",
    "ts-migrate-mongoose": "^4.1.1",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "winston-mongodb": "^7.0.1"
  }
}
